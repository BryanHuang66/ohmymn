{
  "compilerOptions": {
    "noEmit": true,
    "module": "ESNext",
    "target": "es5",
    "allowJs": false,
    "sourceMap": false,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "importHelpers": true,
    "strict": true,
    "baseUrl": "src",
    "lib": [
      "ES2020",
      "ESNext.String"
    ]
  },
  "include": [
    "src/**/*.ts",
    "src/addons/utils.mts"
  ]
}