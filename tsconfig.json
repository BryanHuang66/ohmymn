{
  "compilerOptions": {
    "noEmit": true,
    "module": "ESNext",
    "target": "ES2020",
    "allowJs": false,
    "sourceMap": false,
    "noImplicitAny": true,
    "downlevelIteration": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "suppressImplicitAnyIndexErrors": true,
    "resolveJsonModule": true,
    "importHelpers": true,
    "strict": true,
    "baseUrl": "src",
    "lib": [
      "ES2020"
    ]
  },
  "include": [
    "src/**/*.ts",
  ]
}
